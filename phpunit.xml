<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        backupGlobals               = "true"
        backupStaticAttributes      = "true"
        colors                      = "true"
        convertErrorsToExceptions   = "true"
        convertNoticesToExceptions  = "true"
        convertWarningsToExceptions = "true"
        strict                      = "true"
        syntaxCheck                 = "true"
        bootstrap                   = "vendor/autoload.php">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src/Mansoff/Service</directory>
        </whitelist>
    </filter>

    <testsuites>
        <testsuite name="Das config tests">
            <directory>./src/Mansoff/Tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>